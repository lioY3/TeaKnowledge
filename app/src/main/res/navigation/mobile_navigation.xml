    <fragment
        android:id="@+id/nav_version"
        android:name="com.example.teaknowledge.ui.version.VersionFragment"
        android:label="@string/menu_version"
        tools:layout="@layout/fragment_version" />

    <fragment
        android:id="@+id/nav_feedback"
        android:name="com.example.teaknowledge.ui.feedback.FeedbackFragment"
        android:label="@string/menu_feedback"
        tools:layout="@layout/fragment_feedback" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.teaknowledge.ui.history.HistoryFragment"
